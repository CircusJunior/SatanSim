<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.cataclysm.presentation.CataclysmActivity">

    <Button
        android:id="@+id/demons_button"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:text="Демоны"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/technology_button"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="68dp"
        android:text="Технологии"
        app:layout_constraintStart_toEndOf="@+id/demons_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button33"
        android:layout_width="101dp"
        android:layout_height="51dp"
        android:text="Button"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/apokalyos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Апокалипсис"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="503dp" />

    <Button
        android:id="@+id/cataclism2_button"
        android:layout_width="76dp"
        android:layout_height="49dp"
        android:text="Катклизм2"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="238dp" />

    <Button
        android:id="@+id/cataclism1_button"
        android:layout_width="47dp"
        android:layout_height="66dp"
        android:layout_marginTop="76dp"
        android:text="Катаклизм1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="170dp" />

    <Button
        android:id="@+id/cataclism5_button"
        android:layout_width="99dp"
        android:layout_height="44dp"
        android:text="Катклизм5"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="236dp" />

    <Button
        android:id="@+id/cataclism4_button"
        android:layout_width="73dp"
        android:layout_height="67dp"
        android:text="Катаклизм4"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="411dp" />

    <Button
        android:id="@+id/cataclism3_button"
        android:layout_width="70dp"
        android:layout_height="67dp"
        android:text="Катаклизм3"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="413dp" />

    <Button
        android:id="@+id/mor_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="8dp"
        android:text="Мор"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/hunger_button"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/hunger_button"
        android:layout_width="53dp"
        android:layout_height="62dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="100dp"
        android:text="Голод"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/upgrade5_button"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:text="Апгрейд5"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="241dp" />

    <Button
        android:id="@+id/upgrade2_button"
        android:layout_width="37dp"
        android:layout_height="41dp"
        android:text="Апгрейд2"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="239dp" />

    <Button
        android:id="@+id/ritual_button"
        android:layout_width="47dp"
        android:layout_height="69dp"
        android:layout_marginBottom="116dp"
        android:text="Ритуал"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="170dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <Button
        android:id="@+id/upgrade1_button"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:text="Апгрейд1"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="205dp" />

    <Button
        android:id="@+id/avatar_button"
        android:layout_width="82dp"
        android:layout_height="84dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="8dp"
        android:text="Аватар"
        app:layout_constraintBottom_toTopOf="@+id/ritual_button"
        app:layout_constraintTop_toBottomOf="@+id/cataclism1_button"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="151dp" />

    <Button
        android:id="@+id/death_button"
        android:layout_width="86dp"
        android:layout_height="44dp"
        android:text="Смерть"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/upgrade3_button"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:text="Апгрейд3"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="371dp" />

    <Button
        android:id="@+id/upgrade4_button"
        android:layout_width="34dp"
        android:layout_height="42dp"
        android:text="Апгрейд4"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="371dp" />

    <Button
        android:id="@+id/war_button"
        android:layout_width="83dp"
        android:layout_height="44dp"
        android:text="Война"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="301dp" />

</android.support.constraint.ConstraintLayout>