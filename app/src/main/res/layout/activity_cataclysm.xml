<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.cataclysm.presentation.CataclysmActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorCurrency" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorCurrency"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/currency_soul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorCurrency"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>




    </LinearLayout>

    <Button
        android:id="@+id/demons_button"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="120dp"
        android:text="Демоны"
        app:layout_constraintBottom_toTopOf="@+id/avatar_button"
        app:layout_constraintEnd_toStartOf="@+id/cataclism1_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp" />

    <Button
        android:id="@+id/technology_button"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:layout_marginStart="176dp"
        android:layout_marginBottom="128dp"
        android:text="Технологии"
        app:layout_constraintBottom_toTopOf="@+id/avatar_button"
        app:layout_constraintStart_toEndOf="@+id/demons_button" />

    <Button
        android:id="@+id/button33"
        android:layout_width="91dp"
        android:layout_height="69dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="116dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/apokalyos_button"
        app:layout_constraintTop_toBottomOf="@+id/avatar_button" />

    <Button
        android:id="@+id/apokalyos_button"
        android:layout_width="99dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="132dp"
        android:text="Апокалипсис"
        app:layout_constraintStart_toEndOf="@+id/avatar_button"
        app:layout_constraintTop_toBottomOf="@+id/avatar_button" />

    <Button
        android:id="@+id/cataclism2_button"
        android:layout_width="76dp"
        android:layout_height="57dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="24dp"
        android:text="Катклизм2"
        app:layout_constraintBottom_toTopOf="@+id/war_button"
        app:layout_constraintStart_toEndOf="@+id/avatar_button" />

    <Button
        android:id="@+id/cataclism1_button"
        android:layout_width="49dp"
        android:layout_height="66dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="100dp"
        android:text="Катаклизм1"
        app:layout_constraintBottom_toTopOf="@+id/avatar_button"
        app:layout_constraintEnd_toStartOf="@+id/mor_button" />

    <Button
        android:id="@+id/cataclism5_button"
        android:layout_width="99dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:text="Катклизм5"
        app:layout_constraintEnd_toStartOf="@+id/avatar_button"
        app:layout_constraintTop_toBottomOf="@+id/hunger_button" />

    <Button
        android:id="@+id/cataclism4_button"
        android:layout_width="73dp"
        android:layout_height="67dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:text="Катаклизм4"
        app:layout_constraintEnd_toStartOf="@+id/ritual_button"
        app:layout_constraintTop_toBottomOf="@+id/death_button" />

    <Button
        android:id="@+id/cataclism3_button"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="Катаклизм3"
        app:layout_constraintStart_toEndOf="@+id/ritual_button"
        app:layout_constraintTop_toBottomOf="@+id/war_button" />

    <Button
        android:id="@+id/mor_button"
        android:layout_width="55dp"
        android:layout_height="51dp"
        android:layout_marginBottom="20dp"
        android:text="Мор"
        app:layout_constraintBottom_toTopOf="@+id/cataclism2_button"
        app:layout_constraintStart_toStartOf="@+id/cataclism2_button" />

    <Button
        android:id="@+id/hunger_button"
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="48dp"
        android:text="Голод"
        app:layout_constraintBottom_toTopOf="@+id/avatar_button"
        app:layout_constraintEnd_toStartOf="@+id/cataclism1_button" />

    <Button
        android:id="@+id/ritual_button"
        android:layout_width="47dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:text="Ритуал"
        app:layout_constraintEnd_toEndOf="@+id/avatar_button"
        app:layout_constraintTop_toBottomOf="@+id/avatar_button" />

    <Button
        android:id="@+id/avatar_button"
        android:layout_width="82dp"
        android:layout_height="84dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="148dp"
        android:text="Аватар"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/death_button"
        android:layout_width="86dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:text="Смерть"
        app:layout_constraintEnd_toStartOf="@+id/avatar_button"
        app:layout_constraintTop_toTopOf="@+id/avatar_button" />

    <Button
        android:id="@+id/war_button"
        android:layout_width="83dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Война"
        app:layout_constraintStart_toEndOf="@+id/avatar_button"
        app:layout_constraintTop_toTopOf="@+id/avatar_button" />

</android.support.constraint.ConstraintLayout>